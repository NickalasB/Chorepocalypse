<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="4dp">

    <LinearLayout
        android:id="@+id/widget_single_chore_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackgroundDark"
        android:orientation="vertical">

        <TextView
            android:id="@+id/chore_widget_chore_name_textview"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:textStyle="bold"
            android:textSize="20sp"
            tools:text="Clean Sink" />

        <TextView
            android:id="@+id/chore_widget_chore_due_date_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="8dp"
            android:paddingEnd="8dp"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingStart="8dp"
            android:textSize="16sp"
            tools:text="Due: February 11 at 3:07 PM" />
    </LinearLayout>
</FrameLayout>